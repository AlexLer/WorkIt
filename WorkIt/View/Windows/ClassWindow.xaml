<Window x:Class="WorkIt.View.Windows.ClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClassWindow" Height="300" Width="300">
    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="Capture.JPG"/>
        </DockPanel.Background>
        <StackPanel>
            <Button Content="Add class" Width="110" Height="40" Margin="3"/>
            <Button Content="Delete class" Width="110" Height="40" Margin="3"/>
            <Button Content="Change details" Width="110" Height="40" Margin="3"/>
            <Button Content="Class Participants" Width="110" Height="40" Margin="3" Click="program_btn_click"/>
            <Button Width="110" Height="40" Margin="3" >
                <TextBlock>Generate <LineBreak/>class program</TextBlock>
            </Button>
        </StackPanel>
    </DockPanel>
</Window>
