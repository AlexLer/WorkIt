<Window x:Class="WorkIt.View.Windows.MarketingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MarketingWindow" Height="300" Width="300">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="Capture.JPG"/>
        </StackPanel.Background>
        <Button Height="40" Width="130" Margin="3">
            <TextBlock>Create<LineBreak/>distribution list</TextBlock>
        </Button>
        <Button Content="Send mail to list" Height="40" Width="130" Margin="3"/>
        <Button Content="Add member to list" Height="40" Width="130" Margin="3"/>
        <Button Height="40" Width="130" Margin="3">
            <TextBlock>Remove member<LineBreak/>from list</TextBlock>
        </Button>
    </StackPanel>
</Window>
